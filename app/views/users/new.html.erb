<%= form_with model: @user do |form| %>
  <%= form.label :email, 'Eeeee-mail' %>
  <%= form.text_field :email, placeholder: "Enter your email", value: "" %>
  <%= form.label :username, 'Username here please' %>
  <%= form.text_field :username, placeholder: "Enter your username", value: "" %>
  <%= form.label :password, 'Choose a strong one mate' %>
  <%= form.password_field :password, placeholder: "Enter your password", value: "" %>
  <%= form.hidden_field :user_id, value: 1 %>
  <%= form.submit "Create User", data: { disable_with: "Creating User..." } %>
<% end %>
